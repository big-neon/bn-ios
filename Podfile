platform :ios, '10.0'
use_frameworks!

target 'BigNeonCore' do

	pod 'Stripe'
    	pod 'Alamofire', '~> 4.4'
    	pod 'Mixpanel'
    	pod 'Crashlytics'

  	# Pods for Big Neon
	target 'Big Neon' do
		inherit! :search_paths
        	pod 'PresenterKit'
        	pod 'pop'
		pod 'PWSwitch'
        	pod 'UITextField+Shake'
        	pod 'Fabric'
	end
end

target 'BigNeonUI' do
    	inherit! :search_paths
	pod 'pop'
end
